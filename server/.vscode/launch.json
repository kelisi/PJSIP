{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch Turn Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/third-party/pjproject/source/pjnath/bin/pjturn-srv-x86_64-apple-darwin16.7.0",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            // 配置名称，将会在调试配置下拉列表中显示
            "name": "Smotalk Server Launch",
            // 调试器类型：Windows表示器使用cppvsdbg；GDB和LLDB使用cppdbg。该值自动生成
            "type": "cppdbg",
            // 调试方式
            "request": "launch",
            // 要调试的程序（完整路径，支持相对路径）
            "program": "${workspaceFolder}/build/smotalk.out",
            // 传递给上面程序的参数，没有参数留空即可
            "args": [],
            // 是否停在程序入口点（停在main函数开始）
            "stopAtEntry": false,
            // 调试程序时的工作目录
            "cwd": "${workspaceFolder}",
            "environment": [],
            // 调试时是否显示控制台窗口
            "externalConsole": true,
            // 下面是Mac平台下
            "MIMode": "lldb",
            // FIXME:下面是Linux平台下，需要配置的参数
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            // FIXME:下面是Windows平台下，需要配置的参数
            "windows": {
                // VSCode要使用的调试工具
                "MIMode": "gdb",
                // miDebugger的路径，该值必须设置。尽管会自动搜索
                "miDebuggerPath": "E:\\mingw64\\bin\\gdb.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "preLaunchTask": "build SmoTalk Server"
        },
        {
            // 配置名称，将会在调试配置下拉列表中显示
            "name": "Pjsua App Launch",
            // 调试器类型：Windows表示器使用cppvsdbg；GDB和LLDB使用cppdbg。该值自动生成
            "type": "cppdbg",
            // 调试方式
            "request": "launch",
            // 要调试的程序（完整路径，支持相对路径）
            "program": "${workspaceFolder}/src/third-party/pjproject/source/pjsip-apps/bin/pjsua-x86_64-apple-darwin16.7.0",
            // 传递给上面程序的参数，没有参数留空即可
            // "args": ["--config-file","/Users/chirpin-2/Documents/PJSIP/Code/Smotalk/server/src/third-party/pjproject/source/pjsip-apps/bin/test.cfg"],
            "args": [
                "--config-file",
                "/Users/chirpin-2/Documents/PJSIP/Code/Smotalk/server/src/third-party/pjproject/source/pjsip-apps/bin/test.cfg copy"
            ],
            // 是否停在程序入口点（停在main函数开始）
            "stopAtEntry": false,
            // 调试程序时的工作目录
            "cwd": "${workspaceFolder}",
            "environment": [],
            // 调试时是否显示控制台窗口
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "build Pjsua App"
        }
    ]
}