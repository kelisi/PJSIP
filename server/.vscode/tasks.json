{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SmoTalk Server",
            "type": "shell",
            "command": "make",
            // 设置MakeFile的路径
            "options": {
                // "cwd": "${workspaceRoot}/<DIR_WITH_MAKEFILE>"
                "cwd": "${workspaceRoot}/src/"
            },
            "args": [
                //添加命令执行参数
                // "clean",
                "-d",
            ],
            // start the build without prompting for task selection, use "group": "build" otherwise
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    },
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        },
        {
            "label": "build Pjsua App",
            "type": "shell",
            "command": "make",
            // 设置MakeFile的路径
            "options": {
                // "cwd": "${workspaceRoot}/<DIR_WITH_MAKEFILE>"
                "cwd": "${workspaceRoot}/src/third-party/pjproject/source/pjsip-apps/build/"
            },
            "args": [
                //添加命令执行参数
                ""
            ],
            // start the build without prompting for task selection, use "group": "build" otherwise
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    },
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        }
    ]
}